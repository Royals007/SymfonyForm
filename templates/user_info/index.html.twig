{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Herzlich Willkommen!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #f5f5f5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1> Formular ✅</h1>

        <div>
            {{ form_start(form) }}

            {# {{ form_widget(form) }} #}
            {{ form_widget(form  , { 'attr': {'style': 'width: 350px'} }) }}

            {{ form_end(form) }}

        </div>
        Sie Können unten mehr Info finden:
        <ul>
            <li><a href="https://www.symfony.com/">Symfony Website!</a></li>
            <li><a href="https://symfony.com/doc/current/forms.html">Symfony Form!</a></li>
        </ul>
    </div>

{% endblock %}

